<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroudcolor"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        >

        <include layout="@layout/title_twoicon_back"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewcolor"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="散客消费"
                android:textColor="@color/text_30"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_red"

                    >

                    <TextView
                        android:id="@+id/tv_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingLeft="7dp"
                        android:paddingTop="3dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="3dp"
                        android:text="是"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    >

                    <TextView
                        android:id="@+id/tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingLeft="7dp"
                        android:paddingTop="3dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="3dp"
                        android:text="否"
                        android:textColor="@color/text_30"
                        android:textSize="13sp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/upview"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewcolor"></View>

        <LinearLayout
            android:id="@+id/li_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/balance_rl_card"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/balance_tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="会员卡号"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/balance_et_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/balance_tv_card"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入会员卡号"
                    android:textColor="@color/text_30"
                    android:textColorHint="@color/text_66"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/viewcolor"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tvcard"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:background="@color/white"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="会员卡号"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_tvcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/viewcolor"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/balance_rl_vipname"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="会员姓名"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/balance_tv_vipname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/viewcolor"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/balance_rl_vipjifen"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="会员积分"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/balance_tv_vipjifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/viewcolor"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/balance_rl_vipyue"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="会员余额"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/balance_tv_vipyue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/viewcolor"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/balance_rl_vipdengji"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="会员等级"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/balance_tv_vipdengji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textColor="@color/text_30"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/viewcolor"></View>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:layout_below="@id/upview"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_shopcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="商品条码"
                android:textColor="@color/text_30"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/vip_tv_dingwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/theme_red"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="定位"
                android:textColor="@color/white"
                android:textSize="13sp"
                />

            <EditText
                android:id="@+id/balance_et_shopcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/vip_tv_dingwei"
                android:layout_toRightOf="@id/tv_shopcode"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入或扫描商品条码"
                android:textColor="@color/text_30"
                android:textColorHint="@color/text_66"
                android:textSize="15sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/viewcolor"></View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/backgroudcolor"
                android:cacheColorHint="#00000000"
                android:scrollbars="none"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#cdcdcd"/>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/balance_rl_d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/balance_tv_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="共"
            android:textColor="@color/text_30"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/balance_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/balance_tv_n"
            android:text="0"
            android:textColor="@color/theme_red"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/balance_tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/balance_tv_num"
            android:text="件"
            android:textColor="@color/text_30"
            android:textSize="13sp"
            />

        <LinearLayout
            android:id="@+id/balance_li_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/balance_tv_m"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/balance_tv_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="积分："
                android:textColor="@color/text_30"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/balance_tv_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="@color/theme_red"
                android:textSize="13sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/balance_tv_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/balance_li_jifen"
            android:text="总价："
            android:textColor="@color/text_30"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/balance_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/balance_tv_z"
            android:text="0"
            android:textColor="@color/theme_red"
            android:textSize="15sp"
            />

        <RelativeLayout
            android:id="@+id/balance_rl_jiesan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/theme_red"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="结算"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroudcolor"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/san_tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/text_30"
        android:text="消费金额"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/san_et_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:layout_toRightOf="@id/san_tv_money"
        android:inputType="number|numberDecimal"
        android:textColor="@color/text_30"
        android:textSize="15sp"
        android:gravity="center_vertical|right"
        android:hint="请输入消费金额"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewcolor"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_30"
            android:text="支付方式"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_money"
                style="@style/CouldRecharge_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cloud_recharge_btn_select"
                android:gravity="center"
                android:checked="true"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:text="现金"
                android:textColor="@drawable/cloud_recharge_txt_color_select"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/rb_wx"
                style="@style/CouldRecharge_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/cloud_recharge_btn_select"
                android:gravity="center"
                android:text="微信"
                android:textColor="@drawable/cloud_recharge_txt_color_select"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/rb_zhifubao"
                style="@style/CouldRecharge_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cloud_recharge_btn_select"
                android:gravity="center"
                android:text="支付宝"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:textColor="@drawable/cloud_recharge_txt_color_select"
                android:textSize="13sp"/>


            <RadioButton
                android:id="@+id/rb_yinlian"
                style="@style/CouldRecharge_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cloud_recharge_btn_select"
                android:gravity="center"
                android:text="银联"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:textColor="@drawable/cloud_recharge_txt_color_select"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/rb_yue"
                android:visibility="gone"
                style="@style/CouldRecharge_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/cloud_recharge_btn_select"
                android:gravity="center"
                android:text="余额"
                android:textColor="@drawable/cloud_recharge_txt_color_select"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/rb_qita"
                style="@style/CouldRecharge_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/cloud_recharge_btn_select"
                android:gravity="center"
                android:text="其他支付"
                android:textColor="@drawable/cloud_recharge_txt_color_select"
                android:textSize="13sp"/>
        </RadioGroup>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewcolor"></View>


<RelativeLayout
    android:id="@+id/san_rl_jiesuan"
    android:layout_width="match_parent"
    android:layout_height="45dp"
     android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/kuang_red_red"
    android:layout_marginTop="30dp"
    >
    <TextView
        android:id="@+id/tv_jiesuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:text="结算"
        />
</RelativeLayout>
</LinearLayout>